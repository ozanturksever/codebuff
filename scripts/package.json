{
  "name": "@codebuff/scripts",
  "version": "1.0.0",
  "description": "Scripts package for Codebuff",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./src/index.ts"
    }
