{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": false,
    "types": ["node", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "@codebuff/common/testing/*": ["../common/testing/*"],
      "@codebuff/common/*": ["../common/src/*"],
      "@codebuff/agent-runtime/*": ["../packages/agent-runtime/src/*"],
      "@codebuff/code-map": ["../packages/code-map/src/index.ts"],
      "@codebuff/code-map/*": ["../packages/code-map/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
